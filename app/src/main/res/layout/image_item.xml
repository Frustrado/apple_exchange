        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/image_view_upload"
            android:paddingLeft="30dp"
            android:text="Price"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />


        <TextView
            android:layout_below="@id/text_view_price"
            android:id="@+id/text_view_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/image_view_upload"
            android:paddingLeft="30dp"
            android:text="Kind of apple"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_below="@id/text_view_kind"
            android:id="@+id/text_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view_upload"
            android:paddingLeft="30dp"
            android:text="Type"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/text_view_variety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/image_view_upload"
            android:paddingLeft="30dp"
            android:text="Variety"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/text_view_type"
            />

        <TextView
            android:id="@+id/text_view_Voivodeship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="30dp"
            android:text="Voivodeship"
            android:layout_toRightOf="@id/image_view_upload"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@id/text_view_city"
            />
        <TextView
            android:id="@+id/text_view_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/image_view_upload"
            android:paddingLeft="30dp"
            android:text="city"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            android:layout_below="@id/text_view_variety"
            />
        <TextView
            android:id="@+id/text_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Phone"
            android:layout_toRightOf="@id/image_view_upload"
            android:paddingLeft="30dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            android:layout_below="@id/text_view_Voivodeship"/>




        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/image_view_upload"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>