<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:theme="@style/LoginActivityTheme">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="5dp">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/LinearLayout1"
            android:orientation="vertical"
            android:background="@color/colorPrimary2"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle"
                android:padding="10dp"
                android:src="@mipmap/ic_authentication_round"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="LOGOWANIE"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_below="@id/LinearLayout1"
            android:src="@drawable/square"
            android:layout_marginTop="-10dp"
            android:layout_centerHorizontal="true"
            android:rotation="45"
            android:layout_height="20dp" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_below="@id/imageView1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView_userIcon"
                android:layout_width="40dp"
                android:src="@drawable/ic_user"
                android:padding="3dp"
                android:tint="@color/white"
                android:background="@color/colorPrimary2"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/editTextEmailLog"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@id/imageView_userIcon"
                android:background="@color/editTextBG"
                android:hint="Email"
                android:textSize="15sp"
                android:layout_toRightOf="@id/imageView_userIcon"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_below="@id/RelativeLayout1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView_passwordIcon"
                android:layout_width="40dp"
                android:src="@drawable/ic_password"
                android:padding="6dp"
                android:tint="@color/white"
                android:background="@color/colorPrimary2"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/editTextPasswordLog"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@id/imageView_passwordIcon"
                android:background="@color/editTextBG"
                android:hint="Hasło"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:layout_toRightOf="@id/imageView_passwordIcon"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelativeLayout2"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:visibility="invisible">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_centerVertical="true"
                android:text="Zapamiętaj mnie"/>
            <Button
                android:layout_width="wrap_content"
                android:text="Nie pamiętam hasła"
                android:background="@color/transparent"
                android:textColor="@color/textColor"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_singin"
            android:layout_below="@id/RelativeLayout3"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary2"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="ZALOGUJ SIĘ"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            android:src="@drawable/dash"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/button_singin" />

        <Button
            android:id="@+id/button_singup"
            android:layout_below="@id/imageView2"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary2"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="ZAREJESTRUJ SIĘ"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white" />

    </RelativeLayout>
    


</android.support.v7.widget.CardView>

</RelativeLayout>