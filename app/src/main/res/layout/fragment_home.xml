<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:twittersdk="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginBottom="00dp"
        android:layout_marginTop="0dp">
        <RelativeLayout
            android:id="@+id/RelativeLayout0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/LinearLayout1"
                android:orientation="vertical"
                android:background="@color/colorPrimary2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:padding="5dp"
                    android:src="@drawable/ic_home"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Strona główna"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_below="@id/LinearLayout1"
                android:src="@drawable/square"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                android:rotation="45"
                android:layout_height="20dp" />


            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/apple"
                android:layout_below="@id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_apple_logo_round"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/project_wpam"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/apple"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:text="Projekt WPAM"
                android:textSize="70dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_apple_logo_round"
                android:layout_centerVertical="true"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_apple_logo_round"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_below="@id/project_wpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_apple_logo_round"
                android:layout_centerInParent="true"/>




        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>

